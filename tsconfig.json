{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "typeRoots": [
      "./node_modules/@types",
      "./app/node_modules/@types",
      "./ed25519-ecies/node_modules/@types"
    ],
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "**/*/lib", "**/*/dist"],
  "typeAcquisition": {
    "enable": true
  }
}
